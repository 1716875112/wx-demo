page{
  height: 100%;
}
/* 左侧菜单数据 */
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .left_menu {
  flex: 2;
}
.menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.menu_item.active{
  color:var(--themeColor);
  border-left:5rpx solid currentColor;
}

/* 右侧商品数据 */
.right_content{
  flex: 5;
}
.goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list{
  display: flex;
  flex-wrap: wrap;
}
.goods_list navigator{
  width: 33.33%;
  text-align: center;
}
.goods_list navigator image{
  width: 50%;
}
.delimiter{
  color: #ccc;
  padding: 0 10rpx;
}
